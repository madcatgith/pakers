                    <div class="input-holder">
                        <input type="text" name="data[email]" placeholder="{Dictionary::GetUniqueWord(562)|escape}" />
                    </div>
                </div>
                <div class="form-buttons">
                    <div class="btn btn-green">
                        <span>{Dictionary::GetUniqueWord(311)}</span>
